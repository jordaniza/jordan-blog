---
import { HACKING, CONTACT_LINKS } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header class="my-5 flex w-full flex-col items-center justify-center">
  <nav class="flex w-full items-end justify-between gap-2">
    <div class="flex items-end gap-2">
      <h2 class="mx-1 border-r-[1px] border-black">
        <a href="/"><img height="28" width="28" class="mr-0.5 px-2 py-1" src="/j-logo.png" /></a>
      </h2>
      <HeaderLink class="underline" href={"/"}>About</HeaderLink>
      <HeaderLink class="underline" href={"/" + HACKING}>Posts</HeaderLink>
    </div>
    <div class="mb-1 flex items-end gap-2">
      {
        CONTACT_LINKS.map((link) => (
          <HeaderLink href={link.href} target="_blank">
            <img src={link.icon} alt={link.name} class="h-5 w-5" />
          </HeaderLink>
        ))
      }
    </div>
  </nav>
  <div class="h-[1px] w-full bg-black"></div>
</header>
