---
interface Props {
  skills: string[];
}
const { skills } = Astro.props;
const toProperCase = (str: string) => str[0].toUpperCase() + str.slice(1);
const availableIcons = new Set([
    "javascript", 
    "typescript", 
    "react", 
    "solidity", 
    "nextjs",
    "python",
    "azure",
    'docker',
    'vuejs',
    'postgresql',
    'svelte',
    'nodejs',
    'mongodb'
]);
---

<div class="m-0 flex flex-wrap p-0">
  {
    skills.map((skill) => (
      <div class="mx-0 my-1 mr-2 flex items-center rounded-sm bg-gray-200 pl-1 pr-1">
        <!-- Only render icon and separator if it exists -->
        {availableIcons.has(skill) &&
        <i class={`devicon-${skill}-plain`} />
        <div class="mx-1.5 h-4 w-[1px] bg-black" />}
        <p class="my-0 px-0">{toProperCase(skill)}</p>
      </div>
    ))
  }
</div>
