---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import type { HACKING } from "../consts";

type Props = CollectionEntry<typeof HACKING>["data"];

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html class="flex flex-col items-center" lang="en">
  <head>
    <BaseHead title={"Jordaniza | " + title} description={description} />
  </head>
  <body class="flex items-center flex-col sm:w-full max-w-[90ch] sm:px-3 break-words">
    <Header title={title} />
    <slot />
    <Footer />
  </body>
</html>
